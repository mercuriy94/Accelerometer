<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="ActMainTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ActMainTextView.White" parent="ActMainTextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <style name="AppFABTheme">
        <item name="android:layout_height">@dimen/height_fab_normal</item>
        <item name="android:layout_width">@dimen/width_fab_normal</item>
    </style>

    <style name="AppFABTheme.Normal" parent="AppFABTheme"/>

    <style name="AppFABTheme.Mini">
        <item name="android:layout_height">@dimen/height_fab_mini</item>
        <item name="android:layout_width">@dimen/width_fab_mini</item>

    </style>
</resources>
